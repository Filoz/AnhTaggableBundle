{% macro javascript(includeJQuery) %}
    {% if includeJQuery %}
        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
        <script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.10.3/jquery-ui.min.js"></script>
    {% endif %}

    {% javascripts
        '@AnhTaggableBundle/Resources/vendor/tag-it/js/tag-it.js'
    %}<script src="{{ asset_url }}"></script>{% endjavascripts %}
{% endmacro %}

{% macro stylesheets(includeJQuery) %}
    {% if includeJQuery %}
        <link href="//ajax.googleapis.com/ajax/libs/jqueryui/1.10.3/themes/smoothness/jquery-ui.min.css" rel="stylesheet">
    {% endif %}

    {% stylesheets
        '@AnhTaggableBundle/Resources/vendor/tag-it/css/jquery.tagit.css'
    %}<link rel="stylesheet" href="{{ asset_url }}" />{% endstylesheets %}
{% endmacro %}

{% macro init() %}
    <script type="text/javascript">
        $(function() {
            $('[data-tagit]').each(function(key, value) {
                var options = $(value).data('tagit');
                $(value).tagit(options);
            });
        });
    </script>
{% endmacro %}
